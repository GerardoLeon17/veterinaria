
@{
    ViewBag.Title = "Index";
}

    <div class="justify-content-center">
        <h2 class="text-center display-3"> Bienvenido a  Veterinaria Mr Doctor
        </h2>

    </div>

    <div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 h-75" src="~/Content/img/Pet1.jpg" alt="Primera">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-75" src="~/Content/img/Pet2.jpg" alt="Segunda">
                </div>
           
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </div>

     <div class="justify-content-center">
        <h2 class="text-center display-4"> Ofrecemos lo siguientes servicios</h2>

    </div>

    <div class="row justify-content-center m-4">
        
            <div class="col-md-4">
                <div class="card" style="width: 20rem;background-color:#45a12f">
                    <div class="card-header ">
                        <h5 class="text-white text-center ">Excelente Atención</h5>
                        <div class="card-body ">
                            <img src="~/Content/Img/atencion.jpg" class="card-img-top rounded-lg" alt="fam " style="width:100%; height:170px;">
                            <p class="card-text text-justify text-white">Ofrecemos la mejor atencion para tus mascotas,ya que es lo que buscas.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="width: 20rem;background-color:#b13737">
                    <div class="card-header ">
                        <h5 class="text-white text-center ">Informacion de tus mascotas</h5>
                        <div class="card-body ">
                            <img src="~/Content/Img/info mas.jpg" class="card-img-top rounded-lg" alt="fam" style="width:100%; height:170px; ">
                            <p class="card-text text-justify text-white">Tendras informacion detallada de tu mascota, ademas de ser facil de entender.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="width: 20rem;background-color:#2891b4">
                    <div class="card-header ">
                        <h5 class="text-white text-center  ">Consulta web</h5>
                        <div class="card-body ">
                            <img src="~/Content/Img/consulta web.jpg" class="card-img-top rounded-lg" alt="fam" style="width:100%; height:170px;">
                            <p class="card-text text-justify text-white">Dicha informacion o resultados de tu mascota los encontraras en la web.</p>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>



